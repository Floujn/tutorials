<?xml version="1.0"?>
<odoo>

    <record id="estate_property_offer_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="price"></field>
                <field name="partner_id" string="Partner"></field>
                <field name="validity" string="Validity (days)"></field>
                <field name="date_deadline" string="Deadline"></field>
                <button name="action_accept_offer" string="Accept Offer" type="object" icon="fa-check"/>
                <button name="action_refuse_offer" string="Refuse Offer" type="object" icon="fa-times"/>
                <field name="status"></field>
            </tree>
        </field>
    </record>

    <record id="estate_property_offer_form_view" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <h1><field name="price"/></h1>
                <field name="partner_id" string="Partner"/>
                <field name="validity" string="Validity (days)"></field>
                <field name="date_deadline" string="Deadline"></field>
                <field name="status"/>
            </form>
        </field>
    </record>

</odoo>